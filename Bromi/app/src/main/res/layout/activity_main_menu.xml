<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bromi.Activities.MainMenuActivity">

    <!-- Button Background Made with http://angrytools.com/android/button/ -->
    <Button
        android:id="@+id/practice_button"
        android:text="@string/practice_button_text"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:background="@drawable/main_menu_button_bg"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp" />

    <!-- Button Background Made with http://angrytools.com/android/button/ -->
    <Button
        android:id="@+id/endless_button"
        android:text="@string/challenge_button_text"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:background="@drawable/main_menu_button_bg"
        android:layout_below="@+id/practice_button"
        android:layout_alignLeft="@+id/practice_button"
        android:layout_alignStart="@+id/practice_button"
        android:layout_marginTop="20dp" />

    <!-- Button Background Made with http://angrytools.com/android/button/ -->
    <Button
        android:id="@+id/challenge_button"
        android:text="@string/endless_button_text"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:background="@drawable/main_menu_button_bg"
        android:layout_below="@+id/endless_button"
        android:layout_alignLeft="@+id/endless_button"
        android:layout_alignStart="@+id/endless_button"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/app_name"
        android:id="@+id/bromi_version_look_up"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/ver_info"
        android:id="@+id/bromi_version_look_up_parent"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/bromi_version_look_up"
        android:layout_toEndOf="@+id/bromi_version_look_up" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/user_name"
        android:id="@+id/textView7"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="7dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/user_avatar_main_menu"
        android:layout_toStartOf="@+id/user_avatar_main_menu" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_avatar_main_menu"
        android:adjustViewBounds="true"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:src="@drawable/ava_zfgrunogre"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
