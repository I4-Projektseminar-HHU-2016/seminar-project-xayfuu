<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bromi.Activities.MainMenuActivity">

    <Button
        android:id="@+id/practice_button"
        android:text="@string/practice_button_text"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:background="@drawable/main_menu_button_bg"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:onClick="buttonPractice" />

    <Button
        android:id="@+id/endless_button"
        android:text="@string/challenge_button_text"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:background="@drawable/main_menu_button_bg"
        android:layout_below="@+id/practice_button"
        android:layout_alignLeft="@+id/practice_button"
        android:layout_alignStart="@+id/practice_button"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/challenge_button"
        android:text="@string/endless_button_text"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:background="@drawable/main_menu_button_bg"
        android:layout_below="@+id/endless_button"
        android:layout_alignLeft="@+id/endless_button"
        android:layout_alignStart="@+id/endless_button"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/app_name"
        android:id="@+id/bromi_version_look_up"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/ver_info"
        android:id="@+id/bromi_version_look_up_parent"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toRightOf="@+id/bromi_version_look_up"
        android:layout_toEndOf="@+id/bromi_version_look_up" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/user_name"
        android:id="@+id/user_name"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="7dp"
        android:layout_marginEnd="7dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/user_avatar_clickable"
        android:layout_toStartOf="@+id/user_avatar_clickable" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_avatar_clickable"
        android:adjustViewBounds="true"
        android:minHeight="35sp"
        android:minWidth="35sp"
        android:maxHeight="35sp"
        android:maxWidth="35sp"
        android:src="@drawable/default_avatar"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/return_to_start_screen"
        android:drawableStart="@drawable/ic_cancel_black_24dp"
        android:drawableLeft="@drawable/ic_cancel_black_24dp"
        android:onClick="returnToStartScreen"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
